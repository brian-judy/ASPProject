@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product View";
}

<h2>Product Catalog</h2>
<table class="table d-sm-table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Unit Price</th>
            <th>Description</th>
            <th>Product Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.UnitPrice.ToString("c2")</td>
                <td>@p.Description</td>
                <td>@p.ProductType.ProductTypeName</td>
                <td><input type="button" value="Add to Cart" onclick="location.href='@Url.Action("AddToCart", "Menu")'" /></td>
            </tr>
        }
    </tbody>
</table>

